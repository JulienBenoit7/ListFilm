{% block javascripts %}
    <script>
        function displayTime() {
            let date = new Date();
            let hours = date.getHours();
            let minutes = date.getMinutes();
            minutes = minutes.toString().padStart(2, '0');
            let time = hours + ":" + minutes;
            document.getElementById("time").innerText = time;
            setTimeout(displayTime, 1000);
        }
        displayTime();
    </script>
{% endblock %}
