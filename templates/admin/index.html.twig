{% extends 'base.html.twig' %}

{% block title %}Administrateur{% endblock %}

{% block body %}
    <a class="btn btn-secondary btn-menu mb-3" href="{{ path('app_index') }}">Retour à la page d'accueil</a>
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header text-center bg-secondary text-white" style="font-size: 2rem;">Ajouter</div>
            <div class="card-body d-flex flex-column align-items-center">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4 mb-3 d-flex justify-content-center">
                        <a class="btn btn-primary btn-lg btn-block" href="{{ path('film_new') }}">Ajouter film</a>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-3 d-flex justify-content-center">
                        <a class="btn btn-success btn-lg btn-block" href="{{ path('series_new') }}">Ajouter série</a>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-3 d-flex justify-content-center">
                        <a class="btn btn-success btn-lg btn-block" href="{{ path('season_new') }}">Ajouter saison</a>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-3 d-flex justify-content-center">
                        <a class="btn btn-danger btn-lg btn-block" href="{{ path('actor_new') }}">Ajouter acteur</a>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-3 d-flex justify-content-center">
                        <a class="btn btn-warning btn-lg text-white btn-block" href="{{ path('category_new') }}">Ajouter catégorie</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mt-4">
            <div class="card-header text-center bg-secondary text-white" style="font-size: 2rem;">Modifier</div>
            <div class="card-body d-flex flex-column align-items-center">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4 mb-3 d-flex justify-content-center">
                        <a class="btn btn-primary btn-lg btn-block" href="{{ path('admin_filmAdmin') }}">Modifier film</a>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-3 d-flex justify-content-center">
                        <a class="btn btn-success btn-lg btn-block" href="{{ path('admin_seriesAdmin') }}">Modifier série</a>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-3 d-flex justify-content-center">
                        <a class="btn btn-success btn-lg btn-block" href="{{ path('admin_seasonAdmin') }}">Modifier saison</a>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-3 d-flex justify-content-center">
                        <a class="btn btn-danger btn-lg btn-block" href="{{ path('admin_actorAdmin') }}">Modifier acteur</a>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-3 d-flex justify-content-center">
                        <a class="btn btn-warning btn-lg text-white btn-block" href="{{ path('admin_categoryAdmin') }}">Modifier catégorie</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
