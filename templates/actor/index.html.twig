{% extends 'base.html.twig' %}

{% block title %}Liste des acteurs{% endblock %}

{% block body %}
    <a class="btn btn-danger mb-3" href="{{ path('app_index') }}">
        <i class="fas fa-home"></i> Retour à la page d'accueil
    </a>
    <h1 class="text-danger text-center mb-4">Liste des acteurs</h1>

    {{ form_start(form) }}
    <div class="form-group row align-items-end">
        <div class="col">
            {{ form_widget(form.search, {
                'attr': {
                    'class': 'form-control border shadow-sm',
                    'placeholder': 'Rechercher un acteur...'
                }
            }) }}
        </div>
        <div class="col-auto">
            <div role="group" aria-label="Actions">
                <button class="btn btn-danger btn-menu" type="submit">Rechercher</button>
                <button class="btn btn-secondary btn-menu" type="button" onclick="window.location.href='{{ path('actor_index') }}'">Réinitialiser</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}

    <div class="container">
        <div class="row mt-4">
            {% for actor in actors %}
                <div class="col-md-3 mb-3">
                    <div class="card border-danger shadow-sm h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title text-danger">{{ actor.name }}</h5>
                            <a href="{{ path("actor_show", { actorName: actor.name }) }}" class="btn btn-danger mt-3">
                                <i class="fas fa-info-circle"></i> Voir les titres pour cet acteur
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
