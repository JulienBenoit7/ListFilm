{% extends 'base.html.twig' %}

{% block title %}Catégorie : {{ category.name }}{% endblock %}

{% block body %}
    <a href="{{ path('category_index') }}" class="btn btn-warning text-white mb-3">Retour à la liste des catégories</a>
    <div class="container mt-5">
        <h1 class="text-warning text-center mb-4">{{ category.name }}</h1>

        <div class="row">
            <div class="col-md-6">
                <div class="card border-warning mb-4">
                    <div class="card-header bg-warning text-white">
                        <h2 class="mb-0 text-center">Films</h2>
                    </div>
                    <div class="list-group list-group-flush">
                        {% if films %}
                            {% for film in films %}
                                <a href="{{ path('film_show', { id: film.id }) }}" class="list-group-item list-group-item-action">
                                    {{ film.title }}
                                </a>
                            {% endfor %}
                        {% else %}
                            <p class="list-group-item text-muted text-center">Aucun film trouvé.</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card border-warning mb-4">
                    <div class="card-header bg-warning text-white">
                        <h2 class="mb-0 text-center">Séries</h2>
                    </div>
                    <div class="list-group list-group-flush">
                        {% if series %}
                            {% for serie in series %}
                                <a href="{{ path('series_show', { id: serie.id }) }}" class="list-group-item list-group-item-action">
                                    {{ serie.title }}
                                </a>
                            {% endfor %}
                        {% else %}
                            <p class="list-group-item text-muted text-center">Aucune série trouvée.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
